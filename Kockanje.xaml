<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Casino.Kockanje"
             Title="Kockanje"
             BackgroundColor="{DynamicResource BackgroundColor}">
    <StackLayout Margin="20" Spacing="10">
        <Label Text="U kockanje vi ćete baciti dvije kocke i još će se baciti dvije kocke, ako su brojevi na vašim kockama veći vi pobjeđujete, te dobivate 2x vaš ulog!"
                FontSize="Default"/>
        <StackLayout Margin="20" Spacing="10">
            <Label Text="Stanje Računa"
               x:Name="Money"
               FontSize="Title"
               />
            <Label Text="Vaš ulog:" FontSize="Title"/>
            <Entry Placeholder="Broj GOGI Coina koje ulažete." x:Name="Ulog"/>
        </StackLayout>

        <Button Text="Baci Kocke! 🎲" Padding="10" FontSize="Medium" FontAttributes="Bold" Clicked="BaciKocke_Button_Clicked"></Button>
        <StackLayout Margin="20" Spacing="10">
            <Label Text="Vaše Kocke:" FontSize="Title" x:Name="KockeV"/>
            <Label Text="Bačene Kocke:" FontSize="Title" TextColor="SlateBlue" FontAttributes="Bold" x:Name="KockeB"/>
        </StackLayout>

    </StackLayout>
</ContentPage>